<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileUserActivity"
    android:orientation="vertical"
    android:background="@drawable/background_signin">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/avatar_defaiult_round"
                    android:background="@drawable/botron_duongvien"/>
                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="@color/colorText"
                    android:textStyle="normal"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/txtThongTinTK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="Thông tin tài khoản"
                    android:layout_margin="20dp"
                    android:background="@drawable/background_button"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txtLichSu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="Lịch sử"
                    android:layout_margin="20dp"
                    android:background="@drawable/background_button"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txtBenhDaLuu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="Bệnh đã lưu"
                    android:layout_margin="20dp"
                    android:background="@drawable/background_button"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txtDangXuat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="Đăng xuất"
                    android:layout_margin="20dp"
                    android:background="@drawable/background_button"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</LinearLayout>